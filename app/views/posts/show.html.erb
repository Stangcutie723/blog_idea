
<p>
  <strong>Title:</strong><br>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong><br>
  <%= @post.text %>
</p>
<p>Created: <%= timeago @post.created_at %> </p>

<div id="postshow">
<h3>Reader's Comments</h3>
<%= render @post.comments %>

<h3>Add a comment:</h3>
<%= render "comments/form" %>
</div>


<%= link_to 'Edit Letter', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
